{
    "swagger": "2.0",
    "info": {
        "title": "API Wood",
        "description": "API de gestion de bois",
        "version": "1.0.0"
    },
    "basePath": "/api",
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/auth/signup": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Create a new user",
                "description": "Creates a new user and returns the user object",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "User",
                        "in": "body",
                        "description": "The user object to create",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/UserCreate"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "User created",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/auth/login": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Log in to the application",
                "description": "Logs in a user and returns the user object and a token",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "Credentials",
                        "in": "body",
                        "description": "The user's email and password",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Credentials"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User logged in",
                        "schema": {
                            "$ref": "#/definitions/LoginResponse"
                        }
                    },
                    "401": {
                        "description": "Invalid email or password"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/woods": {
            "get": {
                "tags": [
                    "Wood"
                ],
                "summary": "Réccupère la liste des bois",
                "produces": [
                    "application/json"
                ],
                "security": [
                    {
                        "JWT": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Liste des bois",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Wood"
                            }
                        }
                    },
                    "401": {
                        "description": "Vous devez être connecté pour accéder à cette ressource"
                    }
                }
            },
            "post": {
                "tags": [
                    "Wood"
                ],
                "summary": "Créer un nouveau bois",
                "consumes": [
                    "multipart/form-data"
                ],
                "produces": [
                    "application/json"
                ],
                "security": [
                    {
                        "JWT": []
                    }
                ],
                "parameters": [
                    {
                        "in": "formData",
                        "name": "name",
                        "type": "string",
                        "required": true
                    },
                    {
                        "in": "formData",
                        "name": "typeId",
                        "type": "integer",
                        "required": true
                    },
                    {
                        "in": "formData",
                        "name": "hardnessId",
                        "type": "integer",
                        "required": true
                    },
                    {
                        "in": "formData",
                        "name": "image",
                        "type": "file",
                        "required": false
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Bois créé",
                        "schema": {
                            "$ref": "#/definitions/Wood"
                        }
                    },
                    "500": {
                        "description": "Une erreur est survenue lors de la création du bois"
                    },
                    "401": {
                        "description": "Vous devez être connecté pour accéder à cette ressource"
                    }
                }
            }
        },
        "/woods/hardness/{hardness}": {
            "get": {
                "tags": [
                    "Wood"
                ],
                "summary": "Obtenir les bois par dureté",
                "produces": [
                    "application/json"
                ],
                "security": [
                    {
                        "JWT": []
                    }
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "hardness",
                        "type": "string",
                        "required": true,
                        "description": "Nom de la dureté"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Liste des bois par dureté",
                        "schema": {
                            "type": "array",
                            "$ref": "#/definitions/Wood"
                        }
                    },
                    "401": {
                        "description": "Vous devez être connecté pour accéder à cette ressource"
                    },
                    "500": {
                        "description": "Erreur lors de la récupération des bois par dureté"
                    }
                }
            }
        },
        "/woods/{id}": {
            "get": {
                "tags": [
                    "Wood"
                ],
                "summary": "Obtenir un bois par son ID",
                "produces": [
                    "application/json"
                ],
                "security": [
                    {
                        "JWT": []
                    }
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "type": "integer",
                        "required": true,
                        "description": "ID du bois à récupérer"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Bois récupéré",
                        "schema": {
                            "$ref": "#/definitions/Wood"
                        }
                    },
                    "401": {
                        "description": "Vous devez être connecté pour accéder à cette ressource"
                    },
                    "404": {
                        "description": "Bois non trouvé"
                    },
                    "500": {
                        "description": "Erreur lors de la récupération du bois"
                    }
                }
            },
            "put": {
                "security": [
                    {
                        "JWT": []
                    }
                ],
                "tags": [
                    "Wood"
                ],
                "summary": "Mettre à jour un bois",
                "description": "Met à jour un bois et son image si elle est fournie",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID du bois à mettre à jour",
                        "required": true,
                        "type": "integer",
                        "format": "int64"
                    },
                    {
                        "name": "name",
                        "in": "formData",
                        "description": "Nom du bois mis à jour",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "hardnessId",
                        "in": "formData",
                        "description": "ID de la dureté du bois mis à jour",
                        "required": true,
                        "type": "integer",
                        "format": "int64"
                    },
                    {
                        "name": "typeId",
                        "in": "formData",
                        "description": "ID du type du bois mis à jour",
                        "required": true,
                        "type": "integer",
                        "format": "int64"
                    },
                    {
                        "name": "image",
                        "in": "formData",
                        "description": "Image du bois mis à jour",
                        "required": false,
                        "type": "file"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Bois mis à jour",
                        "schema": {
                            "$ref": "#/definitions/Wood"
                        }
                    },
                    "404": {
                        "description": "Bois non trouvé"
                    },
                    "500": {
                        "description": "Une erreur est survenue lors de la mise à jour du bois"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Wood"
                ],
                "summary": "Supprimer un bois",
                "produces": [
                    "application/json"
                ],
                "security": [
                    {
                        "JWT": []
                    }
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "type": "integer",
                        "required": true,
                        "description": "ID du bois à supprimer"
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Bois supprimé"
                    },
                    "401": {
                        "description": "Vous devez être connecté pour accéder à cette ressource"
                    },
                    "404": {
                        "description": "Bois non trouvé"
                    },
                    "500": {
                        "description": "Erreur lors de la suppression du bois"
                    }
                }
            }
        }
    },
